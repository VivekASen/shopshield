{
  "manifest_version": 3,
  "name": "ShopShield â€” pause impulse shopping",
  "short_name": "ShopShield",
  "description": "Helps curb impulse shopping by hiding checkout/payment UI, adding a mindful pause modal and configurable delay before purchases.",
  "version": "0.9.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ShopShield"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
